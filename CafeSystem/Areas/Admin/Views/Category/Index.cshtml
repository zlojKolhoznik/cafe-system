@model System.Collections.Generic.IEnumerable<CafeSystem.Models.Category>

@{
    ViewData["Title"] = "Food categories";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<hr>

@if (Model.Count() != 0)
{
    <table class="table table-striped">
        <tr>
            <th style="width: 75%">Name</th>
            <th>Actions</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td class="btn-group">
                    <a asp-action="Upsert" asp-route-id="@category.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </table>

    <hr>
    
    <a class="btn btn-primary" asp-action="Upsert">Create new category</a>
}
else
{
    <span class="text-primary">No categories found, you can </span>
    <a class="btn btn-link" asp-action="Upsert">create new category.</a>
}
