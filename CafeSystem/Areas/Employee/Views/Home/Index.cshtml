@model IEnumerable<CafeSystem.Models.Order>

@{
    ViewData["Title"] = "Available Orders";
    Layout = "_Layout";
}

<h2 class="text-center text-primary">@ViewData["Title"]</h2>

<hr>

@if (!Model.Any())
{
    <h3 class="text-center text-danger">No available orders</h3>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Table</th>
            <th>Paid</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TableNumber</td>
                <td>@(order.IsPaymentDone ? "Yes" : "No")</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Take" class="btn btn-primary" asp-route-id="@order.Id">Take</a>
                        <a asp-action="Details" class="btn btn-secondary" asp-route-id="@order.Id">Details</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <hr>

}
<a class="btn btn-primary" asp-action="ActiveOrders">Active Orders</a>
